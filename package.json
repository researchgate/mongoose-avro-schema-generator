{
  "name": "mongoose-avro-schema-creator",
  "version": "0.1.0",
  "description": "Generates Apache Avro schemas from mongoose schemas.",
  "main": "lib/js/index.js",
  "module": "lib/es/index.js",
  "bin": "lib/js/bin/index.js",
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "commitmsg": "commitlint -x @commitlint/config-angular --edit",
    "coverage": "yarn test -- --coverage",
    "create-github-release": "conventional-github-releaser -p angular",
    "format": "eslint --fix src/",
    "lint": "run-s lint:*",
    "lint:json": "jsonlint-cli {**/*.json,.*rc}",
    "lint:js": "eslint src/",
    "precommit": "echo $PATH && yarn lint-staged && yarn test",
    "prepublishOnly": "run-s test",
    "release": "standard-version",
    "test": "./node_modules/mocha/bin/mocha test"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,*rc}": [
      "jsonlint-cli"
    ]
  },
  "keywords": [
    "avro",
    "mongoose",
    "schema",
    "nodejs"
  ],
  "author": "Tobias Hornberger",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^4.2.2",
    "@commitlint/config-angular": "^4.2.1",
    "babel-eslint": "^8.0.0",
    "conventional-github-releaser": "^2.0.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jsonlint-cli": "^1.0.1",
    "lint-staged": "^5.0.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.1",
    "standard-version": "^4.2.0",
    "stylelint": "^8.0.0",
    "stylelint-order": "^0.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "cli-spinner": "^0.2.6",
    "commander": "^2.11.0",
    "fs-extra": "^4.0.1",
    "mocha": "^4.0.1",
    "mongoose": "^4.13.4",
    "ncp": "^2.0.0",
    "nodegit": "^0.20.1",
    "semver": "^5.4.1",
    "validate-npm-package-name": "^3.0.0"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">= 1.0.0"
  }
}
